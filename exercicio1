function t = exercicio1(func, func_d, x0)
  % nao alterar: inicio
  es = 0.01;
  imax = 20;
  % nao alterar: fim

  t = x0;
  for ii = 1:imax
    df = func_d(t);
    if abs(df) < 1e-12
      % Em vez de retornar imediatamente, apenas interrompa o loop
      break
    end
    t_new = t - func(t) / df;
    erro = abs((t_new - t) / t_new);
    t = t_new;
    if erro < es
      break
    end
  end
endfunction
