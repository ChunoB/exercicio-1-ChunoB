% filepath: c:\Users\bruno\OneDrive\Desktop\scaffolds\exercicio1.m
function t = exercicio1(func, func_d, x0)
  % nao alterar: inicio
  es = 0.01;
  imax = 20;
  % nao alterar: fim

  x_curr = x0;

  for ii = 1:imax
    f_curr = func(x_curr);
    df_curr = func_d(x_curr);

    % Evita divisão por zero
    if df_curr == 0
      break
    end

    % Passo de Newton
    x_next = x_curr - f_curr / df_curr;

    % Checa convergência
    if abs(x_next - x_curr) < es
      t = x_next;
      return
    end

    x_curr = x_next;
  end

  % Se não convergiu, retorna último valor
  t = x_curr;
end
