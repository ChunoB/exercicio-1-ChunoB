% filepath: c:\Users\bruno\OneDrive\Desktop\scaffolds\exercicio1.m
function t = exercicio1(func, func_d, x0)
  % nao alterar: inicio
  es = 0.01;
  imax = 20;
  % nao alterar: fim

  v = zeros(imax,1);     % vetor de iterações
  v(1) = x0;             % chute inicial

  for ii = 1:imax-1
    % Atualiza usando Newton-Raphson
    v(ii+1) = v(ii) - func(v(ii))/func_d(v(ii));

    % Calcula erro absoluto
    erro = abs(v(ii+1)-v(ii));

    % Se convergiu, retorna imediatamente
    if erro < es
      t = v(ii+1);
      return
    end
  end

  % Retorna último valor se não convergir antes
  t = v(imax);
end
