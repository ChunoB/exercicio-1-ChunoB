function t = exercicio1(func, func_d, x0)

  % nao alterar: inicio
  es = 0.01;
  imax = 20;
  % nao alterar: fim

  v = zeros(imax,1);     % vetor de iterações
  v(1) = x0;             % chute inicial
  erro = zeros(imax,1);  % vetor de erros

  for ii = 1:imax-1
    if ii ~= 1
      erro(ii) = abs((v(ii)-v(ii-1))/v(ii));
      if erro(ii) < es
        break;
      endif
    endif
    v(ii+1) = v(ii) - func(v(ii))/func_d(v(ii));
  endfor

  t = v(ii);   % último valor é a raiz

endfunction
